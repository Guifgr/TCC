{
  "connectionStrings": {
    "MssqlConnection": "${env:DATA_BASE}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "TOKEN": {
    "ISSUER": "TccIssuer",
    "EXPIRES-HOURS": 48
  },
  "MAILSERVER": {
    "SERVER_SMTP": "${env:SERVER_SMTP}",
    "SERVER_PORT_SMTP": "${env:SERVER_PORT_SMTP}",
    "MAIL_SENDER": "${env:MAIL_SENDER}",
    "MAIL_SENDER_PASSWORD": "${env:MAIL_SENDER_PASSWORD}"
  },
  "AllowedHosts": "*"
}
